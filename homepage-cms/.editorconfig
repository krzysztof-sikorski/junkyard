root = true

[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 80

[*.php]
# settings required by PSR-12 standard
indent_size = 4
max_line_length = 120

[bin/console]
# settings required by PSR-12 standard
indent_size = 4
max_line_length = 120

[config/**/*.yaml]
indent_size = 4
max_line_length = 120

[composer.lock]
max_line_length = unset

[Makefile]
indent_style = tab
max_line_length = unset

[templates/base.html.twig]
max_line_length = unset
