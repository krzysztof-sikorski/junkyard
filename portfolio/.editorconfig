root = true

[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
max_line_length = 80

[Makefile]
indent_style = tab

[public/css/combined.css] # generated file
insert_final_newline = unset
max_line_length = unset
